{
  "name": "email-gateway-service",
  "version": "1.0.0",
  "description": "Email gateway - routes emails to Postmark (transactional) or Instantly (broadcast) based on type",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && npm run generate:openapi",
    "start": "node dist/index.js",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^22.13.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.2.2",
    "@types/supertest": "^6.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
