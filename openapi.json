{
  "openapi": "3.0.0",
  "info": {
    "title": "Email Gateway",
    "version": "1.0.0",
    "description": "Email gateway that routes emails to Postmark (transactional) or Instantly (broadcast) based on type."
  },
  "servers": [
    {
      "url": "http://localhost:3009",
      "description": "Local development"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Health check endpoints"
    },
    {
      "name": "Email Routing",
      "description": "Route emails to transactional or broadcast providers"
    },
    {
      "name": "Stats",
      "description": "Email delivery statistics"
    },
    {
      "name": "Webhooks",
      "description": "Provider webhook forwarding"
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "Service-to-service API key"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "service": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "status",
          "service",
          "version"
        ]
      },
      "SendResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the email was sent successfully"
          },
          "messageId": {
            "type": "string",
            "description": "Provider message ID (Postmark messageId or Instantly leadId)"
          },
          "provider": {
            "type": "string",
            "enum": [
              "transactional",
              "broadcast"
            ],
            "description": "Provider that handled the email"
          },
          "campaignId": {
            "type": "string",
            "description": "Instantly campaign ID (broadcast only)"
          },
          "error": {
            "type": "string",
            "description": "Error message if send failed"
          },
          "deduplicated": {
            "type": "boolean",
            "description": "True if this response was returned from the idempotency cache (email was not re-sent)"
          }
        },
        "required": [
          "success",
          "provider"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          },
          "details": {
            "type": "string",
            "description": "Additional error details"
          }
        },
        "required": [
          "error"
        ]
      },
      "SequenceStep": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "string",
            "description": "Email subject line for this step"
          },
          "body": {
            "type": "string",
            "description": "HTML email body for this step"
          },
          "delayDays": {
            "type": "integer",
            "minimum": 0,
            "description": "Days to wait before sending this step (0 = immediate)"
          }
        },
        "required": [
          "subject",
          "body",
          "delayDays"
        ]
      },
      "SendRequest": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "appId": {
                "type": "string",
                "description": "App ID"
              },
              "clerkOrgId": {
                "type": "string",
                "description": "Clerk organization ID"
              },
              "brandId": {
                "type": "string",
                "description": "Brand ID"
              },
              "campaignId": {
                "type": "string",
                "description": "Campaign ID"
              },
              "runId": {
                "type": "string",
                "description": "Run ID for tracking"
              },
              "clerkUserId": {
                "type": "string",
                "description": "Clerk user ID"
              },
              "to": {
                "type": "string",
                "format": "email",
                "description": "Recipient email address"
              },
              "recipientFirstName": {
                "type": "string",
                "description": "Recipient first name"
              },
              "recipientLastName": {
                "type": "string",
                "description": "Recipient last name"
              },
              "recipientCompany": {
                "type": "string",
                "description": "Recipient company name"
              },
              "replyTo": {
                "type": "string",
                "format": "email",
                "description": "Reply-to email address"
              },
              "tag": {
                "type": "string",
                "description": "Email tag for categorization"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Custom metadata key-value pairs"
              },
              "idempotencyKey": {
                "type": "string",
                "description": "Idempotency key to prevent duplicate sends (e.g. runId). If a send with the same key already succeeded, the previous result is returned without re-sending."
              },
              "type": {
                "type": "string",
                "enum": [
                  "transactional"
                ],
                "description": "Transactional email channel"
              },
              "subject": {
                "type": "string",
                "description": "Email subject line"
              },
              "htmlBody": {
                "type": "string",
                "description": "HTML email body"
              },
              "textBody": {
                "type": "string",
                "description": "Plain text email body"
              }
            },
            "required": [
              "appId",
              "runId",
              "to",
              "recipientFirstName",
              "recipientLastName",
              "recipientCompany",
              "type",
              "subject"
            ]
          },
          {
            "type": "object",
            "properties": {
              "appId": {
                "type": "string",
                "description": "App ID"
              },
              "clerkOrgId": {
                "type": "string",
                "description": "Clerk organization ID"
              },
              "brandId": {
                "type": "string",
                "description": "Brand ID"
              },
              "campaignId": {
                "type": "string",
                "description": "Campaign ID"
              },
              "runId": {
                "type": "string",
                "description": "Run ID for tracking"
              },
              "clerkUserId": {
                "type": "string",
                "description": "Clerk user ID"
              },
              "to": {
                "type": "string",
                "format": "email",
                "description": "Recipient email address"
              },
              "recipientFirstName": {
                "type": "string",
                "description": "Recipient first name"
              },
              "recipientLastName": {
                "type": "string",
                "description": "Recipient last name"
              },
              "recipientCompany": {
                "type": "string",
                "description": "Recipient company name"
              },
              "replyTo": {
                "type": "string",
                "format": "email",
                "description": "Reply-to email address"
              },
              "tag": {
                "type": "string",
                "description": "Email tag for categorization"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Custom metadata key-value pairs"
              },
              "idempotencyKey": {
                "type": "string",
                "description": "Idempotency key to prevent duplicate sends (e.g. runId). If a send with the same key already succeeded, the previous result is returned without re-sending."
              },
              "type": {
                "type": "string",
                "enum": [
                  "broadcast"
                ],
                "description": "Broadcast email channel"
              },
              "sequence": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SequenceStep"
                },
                "minItems": 1,
                "description": "Email sequence steps sent via Instantly"
              }
            },
            "required": [
              "appId",
              "runId",
              "to",
              "recipientFirstName",
              "recipientLastName",
              "recipientCompany",
              "type",
              "sequence"
            ]
          }
        ]
      },
      "Stats": {
        "type": "object",
        "properties": {
          "emailsSent": {
            "type": "number",
            "description": "Total emails sent"
          },
          "emailsDelivered": {
            "type": "number",
            "description": "Total emails delivered"
          },
          "emailsOpened": {
            "type": "number",
            "description": "Total emails opened"
          },
          "emailsClicked": {
            "type": "number",
            "description": "Total link clicks"
          },
          "emailsReplied": {
            "type": "number",
            "description": "Total replies received"
          },
          "emailsBounced": {
            "type": "number",
            "description": "Total bounced emails"
          },
          "repliesWillingToMeet": {
            "type": "number",
            "description": "Replies willing to meet"
          },
          "repliesInterested": {
            "type": "number",
            "description": "Replies interested"
          },
          "repliesNotInterested": {
            "type": "number",
            "description": "Replies not interested"
          },
          "repliesOutOfOffice": {
            "type": "number",
            "description": "Replies out of office"
          },
          "repliesUnsubscribe": {
            "type": "number",
            "description": "Total unsubscribes"
          },
          "recipients": {
            "type": "number",
            "description": "Total unique recipients"
          }
        },
        "required": [
          "emailsSent",
          "emailsDelivered",
          "emailsOpened",
          "emailsClicked",
          "emailsReplied",
          "emailsBounced",
          "repliesWillingToMeet",
          "repliesInterested",
          "repliesNotInterested",
          "repliesOutOfOffice",
          "repliesUnsubscribe",
          "recipients"
        ],
        "description": "Stats for transactional emails"
      },
      "StatsResponse": {
        "type": "object",
        "properties": {
          "transactional": {
            "$ref": "#/components/schemas/Stats"
          },
          "broadcast": {
            "allOf": [
              {
                "$ref": "#/components/schemas/Stats"
              },
              {
                "description": "Stats for broadcast emails"
              }
            ]
          }
        }
      },
      "StatsRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "transactional",
              "broadcast"
            ],
            "description": "Filter by email channel type"
          },
          "runIds": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Filter by run IDs"
          },
          "clerkOrgId": {
            "type": "string",
            "description": "Filter by Clerk organization ID"
          },
          "brandId": {
            "type": "string",
            "description": "Filter by brand ID"
          },
          "appId": {
            "type": "string",
            "description": "Filter by app ID"
          },
          "campaignId": {
            "type": "string",
            "description": "Filter by campaign ID"
          }
        }
      }
    },
    "parameters": {}
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health check",
        "description": "Returns service health status",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/send": {
      "post": {
        "tags": [
          "Email Routing"
        ],
        "summary": "Send an email",
        "description": "Send a transactional or broadcast email via the appropriate provider",
        "security": [
          {
            "apiKey": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "502": {
            "description": "Upstream service error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/stats": {
      "post": {
        "tags": [
          "Stats"
        ],
        "summary": "Get aggregated email stats",
        "description": "Get aggregated email stats filtered by type, runIds, clerkOrgId, brandId, appId, and/or campaignId",
        "security": [
          {
            "apiKey": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StatsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Aggregated stats",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "502": {
            "description": "Upstream service error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/postmark": {
      "post": {
        "tags": [
          "Webhooks"
        ],
        "summary": "Forward Postmark webhook events",
        "description": "Receives Postmark webhook events and forwards them to the upstream postmark service",
        "responses": {
          "200": {
            "description": "Webhook forwarded"
          },
          "502": {
            "description": "Upstream service error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/instantly": {
      "post": {
        "tags": [
          "Webhooks"
        ],
        "summary": "Forward Instantly webhook events",
        "description": "Receives Instantly webhook events and forwards them to the upstream instantly service",
        "responses": {
          "200": {
            "description": "Webhook forwarded"
          },
          "502": {
            "description": "Upstream service error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}